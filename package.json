{
	"private": true,
	"scripts": {
		"clean": "rm -rf -- output",
		"build": "node scripts/diff.js && npm run build:web",
		"build:web": "mkdir -p output/web && npm run build:web:html && npm run build:web:img && npm run build:web:css && npm run build:web:js && npm run build:web:favicon",
		"build:web:html": "html-minifier --config-file=.html-minifier.json --input-dir=web --output-dir=output/web --file-ext=html",
		"build:web:img": "for browser in chrome firefox; do cp ./node_modules/@browser-logos/${browser}/${browser}.svg output/web/${browser}.svg; done && cp ./node_modules/@browser-logos/safari/safari_256x256.png output/web/safari.png",
		"build:web:css": "postcss web/main.css --output output/web/main.css",
		"build:web:js": "terser web/main.mjs -cm --module -o output/web/main.mjs",
		"build:web:favicon": "cp web/favicon.svg output/web/favicon.svg",
		"start": "http-server output/web"
	},
	"devDependencies": {
		"@browser-logos/chrome": "^1.0.18",
		"@browser-logos/firefox": "^3.0.9",
		"@browser-logos/safari": "^2.0.0",
		"@unicode/unicode-10.0.0": "^1.1.0",
		"@unicode/unicode-11.0.0": "^1.1.0",
		"@unicode/unicode-12.0.0": "^1.1.0",
		"@unicode/unicode-13.0.0": "^1.1.0",
		"@unicode/unicode-5.1.0": "^1.1.0",
		"@unicode/unicode-5.2.0": "^1.1.0",
		"@unicode/unicode-6.0.0": "^1.1.0",
		"@unicode/unicode-6.1.0": "^1.1.0",
		"@unicode/unicode-6.2.0": "^1.1.0",
		"@unicode/unicode-6.3.0": "^1.1.0",
		"@unicode/unicode-7.0.0": "^1.1.0",
		"@unicode/unicode-8.0.0": "^1.1.0",
		"@unicode/unicode-9.0.0": "^1.1.0",
		"cssnano": "^5.0.6",
		"html-minifier": "^4.0.0",
		"http-server": "^0.12.3",
		"jsesc": "^3.0.2",
		"lodash.template": "^4.5.0",
		"postcss": "^8.3.5",
		"postcss-cli": "^8.3.1",
		"regenerate": "^1.4.2",
		"terser": "^5.7.1"
	}
}
